{
  "name": "ava-env",
  "version": "1.0.0",
  "description": "Test specific environment variables for ava",
  "main": "index.js",
  "repository": "https://github.com/ChocPanda/ava-env",
  "author": "ChocPanda",
  "license": "MIT",
  "private": false,
  "scripts": {
    "commit": "git-cz",
    "build": "rollup -c",
    "test": "nyc ava",
    "test:unit": "nyc ava",
    "test:cov": "nyc report",
    "test:report": "nyc ava --tap | tap-junit --output ./reports/ava --name test-results.xml",
    "lint": "xo",
    "lint:test": "xo",
    "lint:fix": "xo --fix",
    "lint:report": "xo --reporter junit > ./reports/xo/test-results.xml",
    "release": "semantic-release"
  },
  "files": [
    "dist/**/*.js",
    "**/*.md",
    "dist/**/*.d.ts"
  ],
  "dependencies": {
    "ava": "^1.4.1",
    "lodash.clonedeep": "^4.5.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "markdown-toc": "^1.2.0",
    "nyc": "^14.0.0",
    "rollup": "^1.10.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-license": "^0.8.1",
    "rollup-plugin-node-resolve": "^4.2.3",
    "semantic-release": "^15.13.3",
    "tap-junit": "^3.1.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "prettier": "true"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
